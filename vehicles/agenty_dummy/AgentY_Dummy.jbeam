// ── GTA NPC Behavior slots ────────────────────────────────────────────────────
// Enables the jonesingGtaNpc Lua controller.
// GHOST phase: walks slowly parallel to road (sidewalk-offset from centreline),
//   phases through everything.
// Transitions to STANDING only when a physical contact displaces a node ≥ 3 cm
//   (any vehicle — player car, traffic, etc. — hitting the dummy triggers this).
// STANDING phase: stabiliser beams hold dummy upright as a solid physics object.
//   A vehicle hit overwhelms the stabilisers and the dummy tumbles naturally.
"jonesing_gta_npc_on": {
    "information":{
        "name":"GTA NPC Mode (sidewalk ghost walk → tumble on vehicle hit)",
        "authors":"Jonesing",
    },
    "slotType":"AgentY_Dummy_npc_behavior",
    "controller": [
        ["fileName"],
        ["jonesingGtaNpc", {
            "walkSpeed":       0.008,
            "walkChangePeriod":5.0,
            "sidewalkOffset":  5.0
        }],
    ],
},
"jonesing_gta_npc_off": {
    "information":{
        "name":"Normal Physics (no NPC behavior)",
        "authors":"Jonesing",
    },
    "slotType":"AgentY_Dummy_npc_behavior",
},

// ── Skid Tracker slots ────────────────────────────────────────────────────────
// Detects when the dummy is sliding on the ground and draws red streak marks.
// Marks are drawn each GFX frame via DebugDrawer and fade out over their lifetime.
// All thresholds are tunable via slot params.
"jonesing_skid_tracker_on": {
    "information":{
        "name":"Skid Tracker (red ground marks while sliding)",
        "authors":"Jonesing",
    },
    "slotType":"AgentY_Dummy_skid_tracker",
    "controller": [
        ["fileName"],
        ["jonesingSkidTracker", {
            "skidGroundClearance":   0.40,
            "skidBodyFlatThreshold": 1.10,
            "skidSpeedThreshold":    0.25,
            "skidVertVelThreshold":  4.00,
            "skidSampleInterval":    0.04,
            "skidMarkWidth":         0.18,
            "skidDebugMode":         false
        }],
    ],
},
"jonesing_skid_tracker_off": {
    "information":{
        "name":"Skid Tracker disabled",
        "authors":"Jonesing",
    },
    "slotType":"AgentY_Dummy_skid_tracker",
},

